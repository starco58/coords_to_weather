<h1>Weather Lookup</h1>

<input type="@address" class="form-control" placeholder="enter location">

<dl>
  <dt>Latitude:</dt>
  <dd><%= @latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @longitude %></dd>

  <dt>Current temperature:</dt>
  <dd><%= @temperature %></dd>

  <dt>Summary for the hour:</dt>
  <dd><%= @hourly_summary %></dd>

  <dt>Summary for the day:</dt>
  <dd><%= @daily_summary %></dd>

  <dt>Summary for the week:</dt>
  <dd><%= @weekly_summary %></dd>
</dl>
